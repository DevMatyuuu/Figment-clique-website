generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model catalog {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title      String    @unique
  price      Int
  image      String
  image2     String
  featured   Boolean   @default(false) 
  category   String
  stocks     stocks[]
  orderId    String
  Order      Orders  @relation("OrderProducts", fields: [orderId], references: [id])
}

model stocks {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  catalog    catalog   @relation(fields: [catalogId], references: [id])
  catalogId  String    @db.ObjectId
  small      Int
  medium     Int
  large      Int
  xl         Int
  xxl        Int
}

model Orders {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  lastName   String
  email      String
  address    String
  barangay   String
  postalCode String
  city       String
  phone      String
  products   catalog[] @relation("OrderProducts")
}


