generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model catalog {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title      String    @unique
  price      Int
  image      String
  image2     String
  featured   Boolean   @default(false) 
  category   String
  stocks     stocks[]
}

model stocks {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  catalog    catalog   @relation(fields: [catalogId], references: [id])
  catalogId  String    @db.ObjectId
  small      Int
  medium     Int
  large      Int
  xl         Int
  xxl        Int
}

model orders {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  orderNo     String
  country     String
  first_name  String
  last_name   String
  email      String
  address    String
  barangay   String
  postal_code String
  city       String
  phone      String
  products   Json[] 
}


